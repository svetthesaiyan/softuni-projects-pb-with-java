package conditional_statements_extra_exercises;

import java.util.Scanner;

public class a_pipes_in_pool 
{
	public static void main(String[] args)
	{
		Scanner scanner = new Scanner(System.in);
		int volume=Integer.parseInt(scanner.nextLine());
		int pipe1=Integer.parseInt(scanner.nextLine());
		int pipe2=Integer.parseInt(scanner.nextLine());
		double timeAway=Double.parseDouble(scanner.nextLine());
		
		double pipe1Fill=pipe1*timeAway;
		double pipe2Fill=pipe2*timeAway;
		double poolFill=timeAway*(pipe1+pipe2);
		double poolOccupancyInPercent=poolFill/volume*100;
		double pipe1poolOccupancyInPercent=pipe1Fill/poolFill*100;
		double pipe2poolOccupancyInPercent=pipe2Fill/poolFill*100;
		
		if(poolOccupancyInPercent<=volume)
		{
			System.out.printf("The pool is %.2f%% full. Pipe 1: %.2f%%. Pipe 2: %.2f%%.", poolOccupancyInPercent, pipe1poolOccupancyInPercent, pipe2poolOccupancyInPercent);
		}
		else
		{
			System.out.printf("For %.2f hours the pool overflows with %.2f liters.", timeAway, poolFill-volume);
		}
	}
}
