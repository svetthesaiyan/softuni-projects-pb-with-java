package first_steps_in_programming_extra_exercises;

import java.util.Scanner;

public class e_training_lab 
{
	public static void main(String[] args) 
	{
		Scanner scanner=new Scanner(System.in);
		System.out.print("Enter hall width: ");
		double w=Double.parseDouble(scanner.nextLine());	// метри
		System.out.print("Enter hall length: ");
		double h=Double.parseDouble(scanner.nextLine());	// метри
		double hall_area=w*h;
		System.out.print("The area of the hall is: "+hall_area);
		
		double work_space=(70*120)/100;
		
	}
}
