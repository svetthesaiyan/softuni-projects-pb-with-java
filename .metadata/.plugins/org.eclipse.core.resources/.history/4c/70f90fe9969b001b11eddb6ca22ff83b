package conditional_statements_extra_exercises;

import java.util.Scanner;

public class c_harvest 
{
	public static void main(String[] args)
	{
		Scanner scanner = new Scanner(System.in);
		int vineyardArea=Integer.parseInt(scanner.nextLine());
		double grapesPerSquaredMetre=Double.parseDouble(scanner.nextLine());
		int wineInLitres=Integer.parseInt(scanner.nextLine());
		int farmersQuantity=Integer.parseInt(scanner.nextLine());
		
		double grapesInKilos=vineyardArea*grapesPerSquaredMetre;
		double wineForSale=grapesInKilos*2.5*0.4;
		double wineManufactured=Math.abs(wineInLitres-wineForSale);
		
		if(wineForSale<wineInLitres)
		{
			System.out.println("It will be a tough winter! More "+Math.floor(wineManufactured)+" liters wine needed.");
		}
		else
		{
			double wineForFarmers=wineManufactured-wineForSale;
			double winePerFarmer=wineForFarmers/farmersQuantity;
			System.out.println("Good harvest this year! Total wine: "+Math.floor(wineManufactured));
			System.out.println(Math.ceil(wineForFarmers)+" liters left -> "+Math.ceil(winePerFarmer)+" liters per person.");
		}
	}
}
